{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "rootDir": "./app/lib/emails",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "./app/lib/emails/compiled",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./app/lib/emails/templates/*.tsx", "./app/lib/emails/utils/*.{ts,tsx}"]
}
